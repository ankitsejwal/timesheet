<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <article class="card-body">
        <h4 class="card-title mb-4 mt-1">Employee Login</h4>
        <form action="/employees/login" method="post">
          <div class="form-group">
            <label>Email</label>
            <input
              class="form-control"
              type="email"
              placeholder="email"
              name="email"
              id=""
            />
          </div>
          <div class="form-group">
            <label>Password</label>
            <input
              class="form-control"
              type="password"
              placeholder="******"
              name="password"
              id=""
            />
          </div>
          <button class="btn btn-primary btn-block" type="submit">Login</button>
        </form>
      </article>
    </div>
    <div class="<%= error.type %> alert-danger text-center mt-3" role="alert">
      <%= error.message %>
    </div>
  </aside>
</div>
