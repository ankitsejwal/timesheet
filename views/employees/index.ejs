<h2>Employees:</h2>

<form action="/employees" method="GET">
  <input 
  type="text" 
  name="name" 
  placeholder="Search employee"
  value="<%- searchOptions.name %>" />
  <button type="submit">Search</button>
</form>

<% for (const employee of employees) { %>
<form action="/employees" method="get">
  <h4><%= employee.name %></h4>
  <button type="submit" name="id" value="<%= employee.id %>" style="float: right">edit</button>
  <p><%= employee.email %></p>
  <p><%= employee.phone %></p>
</div>
</form>

<% } %>
